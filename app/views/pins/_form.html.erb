
<div class="container col-lg-6">
    <%= form_with(model: pin, local: true) do |form| %>
      <% if pin.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(pin.errors.count, "error") %> Valide los siguientes datos:</h2>
          <div class="alert alert-warning"  role="alert">
            <% pin.errors.full_messages.each do |message| %>
             <%= message %>
            <% end %>
          </div>
        </div>
      <% end %>
        <div class="form-group">
            <%= form.label :titulo, :for=>"lblnombrepin" %>
            <%= form.text_field :titulo, :class => "form-control", :id=>"lblnombrepin" %>
        </div>
       <div class="field custom-file form-group">
            <%= form.label :images, :for=>"lblimgages", class: "custom-file-label" %>
            <%= form.file_field :images, :class => "form-control", :id=>"lblimgages", class: "custom-file-input" %>
        </div>

        <div class="form-group">
            <%= form.label :descripcion, :for=>"lbldescripcionpin" %>
            <%= form.text_field :descripcion, :class => "form-control", :id=>"lbldescripcionpin" %>
        </div>
        <div class="form-group">
            <%= form.label :image, :for=>"lblimagepin" %>
            <%= form.text_field :image, :class => "form-control", :id=>"lblimagepin" %>
        </div>
      <div class="actions">
        <%= form.submit "Guardar", :class => "btn btn-primary" %>
        <% end %>
      </div>
</div>