  <p id="notice"> </p>

<h1>Tus Pines </h1>
  <%= link_to '¿Nuevo pin?', new_pin_path, :class =>"btn btn-success fas fa-plus" %>
<div class="row">
  <% @pins.each do |pin| %>
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card">
        <%= image_tag(pin.image) %>
        <div class="card-body">
          <h5 class="card-title"><%= pin.titulo %></h5>
          <h6 class="card-title">Publicado por: <%= pin.user.name %></h6>
          <p class="card-text"><%= pin.descripcion %></p>
          <%= link_to 'Ver', pin, :class =>"btn btn-info" %>

          <% if can? :update, pin %>
            <%= link_to 'Editar', edit_pin_path(pin), :class =>"btn btn-warning" %>
          <% end %>
          <% if can? :destroy, pin %>
            <%= link_to '', pin, :class =>"btn btn-danger far fa-trash-alt", method: :delete, data: { confirm: 'Está seguro?' } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

